@font-face {
  font-family: 'OpenSans';
  src: url('<%= font_path("OpenSans-Bold.ttf") %>') format('truetype')
}

#hipstermap-poster-container {
  border: 1px solid grey;
  box-shadow: -2px 0px 18px 4px rgba(0,0,0,0.33);
  width: 500px;
  height: 700px;
}

.maps-shadow {
  border: 1px solid grey;
  box-shadow: -2px 0px 18px 4px rgba(0,0,0,0.33);
}

.maps-preview {
  width: 300px;
}

#hipstermap-preview-map {
  width: 460px;
  height: 500px;
  margin: 0 auto;
  margin: 20px;

}

#hipstermap-title {
  text-align: center;
  color: #000;
  margin-top: 20px;
  font-size: 24px;
  letter-spacing: 7px;
  font-family: 'Arial';
}

#hipstermap-subtitle {
  text-align: center;
  color: #4B98B4;
  margin-top: 10px;
  font-size: 16px;
  letter-spacing: 7px;
  font-family: 'Arial';
}

#hipstermap-coords {
  text-align: center;
  color: #4B98B4;
  margin-top: 15px;
  font-size: 16px;
  font-family: 'Arial';
}

.hidden--on-load {
  display: none;
}

.uk-button-primary {
  background-color: #4B98B4;
}

.uk-button-primary:hover, .uk-button-primary:focus {
    background-color: #3e7c93;
}

.search-image {
  width: 60%;
}
