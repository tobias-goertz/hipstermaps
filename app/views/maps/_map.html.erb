<% if map.in_progress? %>
  <div class="text-center py-16">
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-hipster/10 mb-6">
      <svg class="animate-spin h-8 w-8 text-hipster" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </div>
    <p class="text-lg text-gray-600 dark:text-gray-400">Generating your map poster&hellip;</p>
    <p class="text-sm text-gray-400 dark:text-gray-500 mt-2">This usually takes 15&ndash;30 seconds</p>
  </div>

<% elsif map.available? %>
  <div class="text-center">
    <div class="inline-block rounded-lg shadow-xl overflow-hidden mb-8">
      <img src="<%= map.cdn_url %>" alt="<%= map.title %> poster" class="max-w-full h-auto" style="max-height: 70vh;">
    </div>
    <div>
      <%= link_to map.cdn_url, target: "_blank", class: "inline-flex items-center gap-2 bg-hipster hover:bg-hipster-dark text-white font-medium py-3 px-8 rounded-lg transition-colors text-sm tracking-wide" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        Download
      <% end %>
    </div>
  </div>

<% elsif map.failed? %>
  <div class="text-center py-16">
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-100 dark:bg-red-900/20 mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.072 16.5c-.77.833.192 2.5 1.732 2.5z" />
      </svg>
    </div>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-4">Map creation failed. Please try again.</p>
    <%= link_to "Try again", root_path, class: "inline-flex items-center gap-2 bg-hipster hover:bg-hipster-dark text-white font-medium py-3 px-8 rounded-lg transition-colors text-sm tracking-wide" %>
  </div>
<% end %>
